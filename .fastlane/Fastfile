before_all {
    carthage(platform: "iOS")
}

lane :lint do

    swiftLint(
        mode: :lint, 
        config_file: '.swiftlint.yml'
    )
end

desc "Runs all the tests"
lane :test do

	scan(
	  scheme: "TaylorSource",
	  configuration: "Debug",
	  code_coverage: true,
	  output_types: "",
	  derived_data_path: ".ci/xcodebuild-data"
	)

end
